{
  "if … then …": {
    "prefix": "if",
    "body": [
      "if ${1:expression} then ${0:statement}"
    ],
    "description": "If statement (single-line)"
  },
  "if … then begin … endif": {
    "prefix": "if",
    "body": [
      "if ${1:expression} then begin",
      "\t${0:statement}",
      "endif"
    ],
    "description": "If statement (multi-line)"
  },
  "else …": {
    "prefix": "else",
    "body": [
      "else ${0:statement}"
    ],
    "description": "Else statement (single-line)"
  },
  "else begin … endelse": {
    "prefix": "else",
    "body": [
      "else begin",
      "\t${0:statement}",
      "endelse"
    ],
    "description": "Else statement (multi-line)"
  },
  "for …=…,… do …": {
    "prefix": "for",
    "body": [
      "for ${1:variable} = ${2:init}, ${3:limit} do ${0:statement}"
    ],
    "description": "For loop with unit increment (single-line)"
  },
  "for …=…,… do begin … endfor": {
    "prefix": "for",
    "body": [
      "for ${1:variable} = ${2:init}, ${3:limit} do begin",
      "\t${0:statements}",
      "endfor"
    ],
    "description": "For loop with unit increment (multi-line)"
  },
  "for …=…,…,… do …": {
    "prefix": "for",
    "body": [
      "for ${1:variable} = ${2:init}, ${3:limit}, ${4:increment} do ${0:statement}"
    ],
    "description": "For loop with non-unit increment (single-line)"
  },
  "for …=…,…,… do begin … endfor": {
    "prefix": "for",
    "body": [
      "for ${1:variable} = ${2:init}, ${3:limit}, ${4:increment} do begin",
      "\t${0:statements}",
      "endfor"
    ],
    "description": "For loop with non-unit increment (multi-line)"
  },
  "while … do …": {
    "prefix": "while",
    "body": [
      "while ${1:expression} do ${0:statement}"
    ],
    "description": "While loop (single-line)"
  },
  "while … do begin … endwhile": {
    "prefix": "while",
    "body": [
      "while ${1:expression} do begin",
      "\t${0:statement}",
      "endwhile"
    ],
    "description": "While loop (multi-line)"
  },
  "foreach …,… do …": {
    "prefix": "foreach",
    "body": [
      "foreach ${1:element}, ${2:variable} do ${0:statement}"
    ],
    "description": "Foreach without element index (single-line)"
  },
  "foreach …,… do begin … endforeach": {
    "prefix": "foreach",
    "body": [
      "foreach ${1:element}, ${2:variable} do begin",
      "\t${0:statement}",
      "endforeach"
    ],
    "description": "Foreach without element index (multi-line)"
  },
  "foreach …,…,… do …": {
    "prefix": "foreach",
    "body": [
      "foreach ${1:element}, ${2:variable}, ${3:index} do ${0:statement}"
    ],
    "description": "Foreach with element index (single-line)"
  },
  "foreach …,…,… do begin … endforeach": {
    "prefix": "foreach",
    "body": [
      "foreach ${1:element}, ${2:variable}, ${3:index} do begin",
      "\t${0:statement}",
      "endforeach"
    ],
    "description": "Foreach with element index (multi-line)"
  },
  "function …,…": {
    "prefix": "function",
    "body": [
      "function ${1:name}",
      "\t${0:statement}",
      "\treturn, ",
      "end"
    ],
    "description": "Function definition"
  },
  "pro …": {
    "prefix": "pro",
    "body": [
      "pro ${1:name}",
      "\t${0:statement}",
      "end"
    ],
    "description": "Procedure definition (no parameters)"
  },
  "pro …,…": {
    "prefix": "pro",
    "body": [
      "pro ${1:name}, ${2:parameters}",
      "\t${0:statement}",
      "end"
    ],
    "description": "Procedure definition (with parameters)"
  }
}